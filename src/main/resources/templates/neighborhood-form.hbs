{{#partial "content"}}

{{#if editNeighborhood}}

    <div class="well">
        <h1>Edit Neighborhood</h1>
        <form action="/neighborhood/{{editNeighborhood.id}}/edit" method="post">
            <div class ="form-group">
                <label for="neighborhoodName">Name of Neighborhood: </label>
                <input id="neighborhoodName" name="neighborhoodName" type="text" placeholder="{{editNeighborhood.name}}" required>
            </div>
            <div class ="form-group">
                <label for="eventDescription">Description: </label>
                <input id="eventDescription" name="eventDescription" type="text" placeholder="{{editNeighborhood.description}}" required>
            </div>
            <button type="submit" class="btn btn-success">Update Neighborhood</button>
        </form>
    </div>

{{else}}
    <div class="well">
        <h1>Add a new Neighborhood</h1>
        <form action="/neighborhood/new" method="post">
            <div class ="form-group">
                <label for="neighborhoodName">Name of Neighborhood: </label>
                <input id="neighborhoodName" name="neighborhoodName" type="text" required>
            </div>
            <div class ="form-group">
                <label for="eventDescription">Description: </label>
                <input id="eventDescription" name="eventDescription" type="text" required>
            </div>
            <button type="submit" class="btn btn-success">Add Neighborhood!</button>
        </form>
    </div>
{{/if}}

{{/partial}}

{{> layout.hbs}}