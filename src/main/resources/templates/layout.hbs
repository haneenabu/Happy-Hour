<head>
    <title>{{#block "title"}}HappyHour Site{{/block}}</title>

    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel='stylesheet' href='/css/app.css'>
    <link rel='stylesheet' href='/css/magic.css'>
    <link href="https://fonts.googleapis.com/css?family=Oswald|Quattrocento+Sans" rel="stylesheet">
</head>
<body>
<ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="/">Home</a></li>
    <li role="presentation"><a href="/">See All HappyHour Events</a></li>
    <li role="presentation"><a href="/happyhours/new">Add a New HappyHour</a></li>
    <li role="presentation" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Neighborhoods <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            {{#if neighborhoods}}
                {{#each neighborhoods}}
                    <li><a href="/neighborhoods/{{id}}">{{name}}</a></li>
                {{/each}}
                <li><a href="/neighborhoods/new">Add a neighborhood</a></li>

            {{else}}
                <li><a href="/neighborhoods/new">Add a neighborhood</a></li>
            {{/if}}
        </ul>
    </li>
</ul>
<div class="container">
    <!--begin main template-->
    <div class="page-header">
        <h1>HappyHour Events.... <small>Easiest way to find a happy hour near you!</small></h1>
    </div>

    <div class="col-md-12">
        {{#block "content"}}
        {{/block}}

    </div>
</div>
<!--end main template-->
{{#block "footer"}}
    </body>
    </html>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
